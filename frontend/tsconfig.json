{
  "compilerOptions": {
    "target": "ESNext", // 最新のECMAScript
    "useDefineForClassFields": true,
    "module": "ESNext", // ESNextモジュール
    "lib": [
      "ESNext",
      "DOM"
    ], // JS+DOM API
    "jsx": "react-jsx", // React JSX
    "moduleResolution": "node", // Node解決方式
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ] // src配下のみ
}